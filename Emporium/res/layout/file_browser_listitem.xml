<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >
    
    <ImageView
        android:id="@+id/fileBrowserListItemImageView"
        android:contentDescription="@string/dbx_listitem_imageview_desc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/folder_user" />

    <TextView
        android:id="@+id/fileBrowserListItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/fileBrowserListItemImageView"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:textStyle="normal"
        android:scrollHorizontally="true"
        android:text="@string/textview_default_text" />

</RelativeLayout>
